<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_margin="@dimen/margin_container">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView android:layout_width="match_parent" android:layout_height="@dimen/height_feed_image"
                   android:id="@+id/image_profile"
                   android:background="@color/light_gray"
                   android:contentDescription="@string/description_profile"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_margin="@dimen/margin_container"
                      android:orientation="horizontal">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/text_name"
                      android:textSize="@dimen/font_title"
                      android:textColor="@color/dark_green"
                      android:layout_weight="1"/>
            <ImageButton android:layout_width="@dimen/font_title" android:layout_height="@dimen/font_title"
                         android:src="@drawable/ic_fav_border"
                         android:contentDescription="@string/description_like"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>